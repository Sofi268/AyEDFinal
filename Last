//----------------------------------------------Admin de Sistema---------------------------------------------
class AdminSistema{

};

//----------------------------------------------Grafo: Dijkstra----------------------------

int *dijkstra(int C[][cantidadRouters],int s, int t, int Pre[])
{
    static int D[cantidadRouters];
    int S[cantidadRouters];
    int proutActual, i, k, b;
    int menordist, nuevadist;

    for(i=0;i<cantidadRouters;i++){
                            S[i]=NO_MIEMBRO;
                            D[i]=INFI;
                            Pre[i]= -1;
    }
    S[s]=MIEMBRO; D[s]=0; proutActual=s; b=1; k=0;
    while((proutActual!=t)&&(b==1)){
                    b=0;
                    menordist=INFI;
                    for(i=0;i<cantidadRouters;i++){             
                            if(S[i]==NO_MIEMBRO){
                                    nuevadist=D[proutActual]+C[proutActual][i];
                                    if(nuevadist<D[i]){
                                        D[i]=nuevadist;
                                        Pre[i]=proutActual; b=1;
                                    }
                                    if(D[i]<menordist){
                                        menordist=D[i];
                                        k=i;  b=1;
                                    }
                            }
                    }                               
                    proutActual=k; 
                    S[proutActual]=MIEMBRO;
                    printf("\n\n         D     S     Pre");
                    for(i=0;i<cantidadRouters;i++){
                            printf("\n[%2i] %5i %5i %5i     ",i,D[i], S[i],Pre[i]);
                    } 
    }
    return D;
}

void tablaDirecciones(int P[], int s, int t)
{  if (t==s) cout<< s<<"  ";
   else{
        tablaDirecciones(P,s,P[t]);
        cout<<t<<"  ";
   } 
}

//----------------------------------Metodos extra-----------------------------------------------

Router* buscarRouter(int numRout, Lista<Router> routers)
{
    Router* buscado; 
    for(int i = 0; i < routers.size(); i++){
        if(numRout == routers.cabeza().getIDRouter()){
            buscado = &routers.cabeza();
        }
        else buscarRouter(numRout, *routers.resto());
    }
    return buscado;
}
Maquina<Router>* buscarMaquina(int numMaquina, Lista<Maquina<Router>> maquinas)
{
    Maquina<Router>* buscada; 
    for(int i = 0; i < maquinas.size(); i++){
        if(numMaquina == maquinas.cabeza().getNumMaqGeneral()){
            buscada = &maquinas.cabeza();
        }
        else buscarMaquina(numMaquina, *maquinas.resto());
    }
    return buscada;
}

void enviarPagina(Pagina pag, Router* routAsociado)
{
    routAsociado->recibirPagina(pag);
}

//----------------------------------------------- Main-----------------------------------------------------

int main(){
    Lista<Router> rout; //Lista de todos los routers creados
    Lista<Maquina<Router>> maquinas; //Lista de todas las maquinas creadas, independiente del router asociado
    AdminSistema administrador;
    Lista<Paquete> paquetes; //Lista de todos los paquetes creados, independiente de la maquina creadora
    int pagsCanti = rand() % 50; //Numero aleatorio de paginas generadas
    int baseCantidadVeci = 4;
    int limInferior = 0;
    int numMaqGnral = 0;
    Lista<Router> *plistaAuxRout = &rout;
    fill(*matrizAdy, *matrizAdy + cantidadRouters*cantidadRouters, INFI); //Inicializo la matriz de adyacencia con todos los nodos desconectados
    
    //Creacion de los routers

    for(int i = 1; i < cantidadRouters; i++){
        Router* router = new Router();
        router->setIDRouter(i);
        rout.add(*router);
    }
    
    //Creacion de maquinas

    for(int i = 1; i <= cantidadMaquinas; i++){
        int numMaq,numRout;
        numMaqGnral = i;
        int idCantMaq;
        bool apto = false;//Comprobacion que numero de maquinas del router elegido sea menor que el limite (256)

        //Bucle para seleccionar un router aleatorio apto, con cantidad de maquinas disponibles 
        while(!apto){ 
            numRout = rand() % cantidadRouters; //Eleccion de Router Aleatorio
            Router* routTentativo = buscarRouter(numRout,rout); 
            idCantMaq = routTentativo->getCantidadMaq();//Obtencion de la cantidad de Maquinas asociada al router aleatorio obtenido
            
            if(idCantMaq < cantidadMaquinas){  //Comprobacion de la cantidad de maquinas es menor a la maxima Tentativo
                Router* routApto = routTentativo;
                numMaq = ++idCantMaq;
                Maquina<Router>* maquinaNueva = new Maquina<Router>(numMaq,numRout);//Creacion de la nueva maquina
                maquinaNueva->setRouterAsociado(routApto);//Asociacion del router a la maquina
                routApto->agregarMaquina(maquinaNueva);//Asociacion de la maquina al router
                maquinaNueva->setNumMaqGeneral(numMaqGnral); //Seteo de numero de maquina general
                maquinas.add(*maquinaNueva);//Agregado de la maquina nueva a la lista de maquinas  
                apto = true;  
            }            
        }
    }

    //Creacion de conexiones entre los Routers
    //Dos bucles: el primero para elegir los routers vecinos y guardarlos, y el segundo para guardar en los vecinos ese router

    for(int i = 1; i <= cantidadRouters; i++){ //i representa el numero del router al que se le esta designando los vecinos
        Router* proutActual = plistaAuxRout->getCabeza();
        Router* proutVecino;
        int idActual = proutActual->getIDRouter();
        int idVecino;
        int cantVeciAleat = (rand() % baseCantidadVeci) + limInferior;

        for(int j = 0; j<cantVeciAleat; j++){
            int numRoutVeci = rand() % (cantidadRouters);
            if(numRoutVeci!=proutActual->getIDRouter()){
                proutVecino = buscarRouter(numRoutVeci , rout);
                idVecino = proutVecino->getIDRouter();

                proutActual->agregarVecino(proutVecino);
                proutVecino->agregarVecino(proutActual);
                matrizAdy[idActual][idVecino] = 1; //Actualizacion de la matriz de Adyacencia
            }
            else j--; //Caso en que el numero del router proutVecino sea su mismo numero de ID
        }
        limInferior++;
        plistaAuxRout = plistaAuxRout->resto(); //Movimiento hacia el siguiente router
    }

    //Creacion de paginas 

    Lista<Router> *prout = &rout;

    for(int i=0; i<pagsCanti; i++){

        //Seleccion de maquina generadora aleatoria
        int numMaquinaAleat = rand() % cantidadMaquinas;
        Maquina<Router>* maquinaAleat;
        maquinaAleat = buscarMaquina(numMaquinaAleat, maquinas);

        //Generacion de la pagina
        Pagina* pagina = maquinaAleat->generarPaginaAleatoria(prout, cantidadRouters);

        //Envio de pagina al router de la maquina correspondiente
        Router* routAsociado = maquinaAleat->getRouterAsociado();
        enviarPagina(*pagina, routAsociado);
    }

    //Designacion mejores rutas para los paquetes
    

    //Creacion de admin del sistema 

    //Reconfiguracion rutas de los paquetes
    //Bucle de envios hasta que no haya mas paquetes en ningun router
}
